<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<BorderPane
        onKeyPressed="#handleKeyPressed"
        onKeyReleased="#handleKeyReleased"
        xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.gameSceneController"
            prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: darkblue;"
            fx:id="borderPane"
>
    <Button fx:id="exitButton" onAction="#exitButton" prefHeight="50" prefWidth="300" style="-fx-font-size:40">Exit</Button>
    <left>
        <VBox spacing="50" prefWidth="200" prefHeight="800">
            <Label textFill="black" style="-fx-font-size:10"  fx:id="gameInformation">hej</Label>
            <Label textFill="black" style="-fx-font-size:50"  fx:id="levelLabel">Level 1</Label>
            <HBox >
                <Rectangle  onMouseClicked="#onMousePressed" height="100" width="30"></Rectangle>
                <Rectangle fill="darkblue"  onMouseClicked="#onMousePressed" height="100" width="40" ></Rectangle>
                <Rectangle  onMouseClicked="#onMousePressed" height="100" width="30"></Rectangle>
            </HBox>





        </VBox>

    </left>

    <center>
        <StackPane>

            <GridPane id="tetrisGrid" fx:id="tetrisGrid" prefWidth="400" prefHeight="400" alignment="CENTER">


            </GridPane>
            <VBox alignment="CENTER" spacing="100">
                <Label textFill="greenyellow" fx:id="pausedText" style="-fx-font-size:100"  visible="false">PAUSED</Label>
                <Button onAction="#resumeGame"  visible="false" fx:id="resumeButton" prefHeight="50" prefWidth="300" style="-fx-font-size:40" >Resume</Button>
                <Button onAction="#pauseButtonAction" visible="false" fx:id="pauseButton" prefHeight="50" prefWidth="300" style="-fx-font-size:40" >Exit game</Button>
            </VBox>

        </StackPane>


    </center>

    <right>
        <VBox spacing="50" prefWidth="200" prefHeight="800">
            <Label textFill="black" fx:id="nextLabel" style="-fx-font-size:50"  text="Next"></Label>
            <GridPane alignment="CENTER" fx:id="nextPieceGrid">


            </GridPane>
            <Label fx:id="scoreLabel" textFill="black" style="-fx-font-size:50"  text="Score"></Label>
            <Label textFill="black" fx:id="score" style="-fx-font-size:50"  text=""></Label>
        </VBox>
    </right>

</BorderPane>
